<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity"
    android:background="@color/green"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="Upload\nVehicle Information"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:src="@drawable/baseline_directions_car_24"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/green_border"
        app:cardCornerRadius="30dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <EditText
                android:id="@+id/uploadOwnerName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:hint="Enter owner name"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:background="@drawable/border_gree"/>
            <EditText
                android:id="@+id/uploadVehicleBrand"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:hint="Enter vehicle brand"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:background="@drawable/border_gree"/>
            <EditText
                android:id="@+id/uploadVehicleRTO"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:hint="Enter vehicle RTO"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:background="@drawable/border_gree"/>
            <EditText
                android:id="@+id/uploadVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:hint="Enter vehicle number"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:background="@drawable/border_gree"/>
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Upload"
                android:textSize="24sp"
                android:layout_marginTop="40dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>